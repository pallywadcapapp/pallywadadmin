@{
    //ViewData["Title"] = "Departments";
    ViewBag.Title = "Basic Settings";
}

<link href="css/index_style.css" rel="stylesheet">
<div class="container-fluid">
    <!-- Breadcrumbs-->
    <ol class="breadcrumb">
        <li class="breadcrumb-item">
            <a href="#">Dashboard</a>
        </li>
        <li class="breadcrumb-item active">Basic Settings</li>
    </ol>
    <!-- Example DataTables Card-->
    <div class="card mb-3">
        <div class="card-header">
            <i class="fa fa-table"></i>Basic Settings
        </div>
        <div class="card-body">
            <div class="row" id="myHeader">
                <div class="form-group">
                    <span>Coop Name </span><input type="text" placeholder="Cooperative Name" class="form-control"
                        id="coyname" />
                </div>
                <div class="form-group">
                    <span>Coop Address</span><input type="text" placeholder="Cooperative address" class="form-control"
                        id="coyaddress" />
                </div>
                <div class="form-group">
                    <span>Phone No </span><input type="text" placeholder="Phone No" class="form-control"
                        id="phonenumber1" />
                </div>
                <div class="form-group">
                    <span>Mobile No</span><input type="text" placeholder="Mobile No" class="form-control"
                        id="phonenumber2" />
                </div>
                <div class="form-group">
                    <span>Email Address </span><input type="text" placeholder="Email Address" class="form-control"
                        id="emailaddress" />
                </div>
                <div class="form-group">
                    <span>Year Begin</span><input type="date" placeholder="Year Begin" class="form-control"
                        id="yearbegin" />
                </div>
                <div class="form-group">
                    <span>Year End </span><input type="date" placeholder="Year End" class="form-control"
                        id="yearend" />
                </div>
                <div class="form-group">
                    <span>Share Value</span><input type="number" placeholder="Share Value" class="form-control"
                        id="sharevalue" />
                </div>
                <div class="form-group">
                    <span>Savings Int. Rate</span><input type="number" placeholder="Interest Rate" class="form-control"
                        id="savingsIntRate" />
                </div>
                <div class="form-group">
                    <span>Savings Amount</span><input type="number" placeholder="Savings Amount" class="form-control"
                        id="withdrawamt" />
                </div>
                <div>
                    <button type="button" onclick="saveHeader();" id="save" class="btn btn-success"><i class="fa fa-save"></i> Save</button>
                </div>
            </div>
        </div>

    </div>
</div>

@section Scripts{

<script src="~/Scripts/config.js" type="text/javascript"></script>
<script>
    var header = '';
    function saveHeader() {
        $('#myHeader').pleaseWait();

        var savingsIntRate = $('#savingsIntRate').val();
        var withdrawamt = $('#withdrawamt').val();
        var sharevalue = $('#sharevalue').val();
        var yearend = $('#yearend').val();
        var emailaddress = $('#emailaddress').val();
        var phonenumber1 = $('#phonenumber1').val();
        var phonenumber2 = $('#phonenumber2').val();
        
        header.savingsIntRate = savingsIntRate;
        header.withdrawamt = withdrawamt;
        header.sharevalue = sharevalue;
        header.yearend = yearend;
        header.emailaddress = emailaddress;
        header.phonenumber1 = phonenumber1;
        header.phonenumber2 = phonenumber2;
        var url = appConfig.apiURL + "api/settings/basicsettings";
        $.ajax({
            type: 'PUT',
            url: url,
            data: JSON.stringify(header),
            dataType: 'json',
            contentType: "application/json",
        }).done(function (data) {
            $('#myHeader').pleaseWait('stop');
            toastr.success('Basic Settings  saved successfully');
            refreshTables();
        }).fail(function (request, message, error) {
            $('#myHeader').pleaseWait('stop');
            toastr.error('error ' + error + 'for saving Settings ');
        });

    }

    function getFind(obj) {
    for (i = 0; i < obj.childNodes.length; i++) {
        if (obj.childNodes[i].tagName == "INPUT") {
            if (obj.childNodes[i].type == "text") {
                return 'text';
            }
            else if (obj.childNodes[i].type == "checkbox") {
                return 'checkbox';
            }
            else if (obj.childNodes[i].type == "radio") {
                return 'radio';
            }
            else if (obj.childNodes[i].type == "date") {
                return 'date';
            }
            else if (obj.childNodes[i].type == "number") {
                return 'number';
            }
        }
        if (obj.childNodes[i].tagName == "SELECT") {
            return 'select';
        }
    }
}

