@section Scripts{

    <script src="~/Scripts/config.js" type="text/javascript"></script>
    <script>
        var loanDetails = '';

        function loadDefault() {
            $.get(appConfig.apiURL + 'api/settings/ChartAcc', function (data) {
                $guarantors.empty();
                //$guarantors.append('<option value=""> Select GL </option>')
                for (var counter = 0; counter <= data.length - 1; counter++) {
                    $option = $('<option value="' + data[counter].accountno + '">' + data[counter].accountno + ' - ' + data[counter].shortdesc + '</option>');

                    $guarantors.append($option);
                }
                $guarantors.select2({
                    placeholder: "Select Guarantors",
                    width: 'element'
                }).on('change', function (e) {
                    if ($(this).val() && $(this).val().length) {
                        $(this).next('.select2-container')
                            .find('li.select2-search--inline input.select2-search__field').attr('placeholder', 'Select Guarantors');
                    }
                });
            }).fail(function (e) {
                toastr.error('unable to get guarantors list');
            });
        }

        function actionFormatter(value, row, index) {
            return '<a href="./tbdetails?year=2018&id=' + value + '" >' + value + '</a>';
        };
        function loanrefFormatter(value, row, index) {
            return '<a href="./LoanRepaymentDetails?loanid=' + value + '" >' + value + '</a>';
        };

        //
        function refreshTables() {
            var newUrl = appConfig.apiURL + 'api/settings/LoanRequest';
            $('#LoanRequestTab').bootstrapTable('refresh', { url: newUrl, silent: true });
        }


        function saveReview(type) {
            var url = '@Html.Raw(Url.Action("LoanProcessor","Admin"))';
            window.location.href = url + '?loanId=' + encodeURIComponent(loanDetails.loanId) + '&memberId=' + encodeURIComponent(loanDetails.memberId);
        }


        function loadView(id) {
            $('#loadViewModal').pleaseWait();
            var url = appConfig.adminURL + 'api/loans/repayydetails?id=' + encodeURIComponent(id);
            $.get(url, function (data) {
                loanDetails = data;
                $('#loadViewModal').pleaseWait('stop');
                try {
                    for (var key in data) {
                        if (key == 'insuredname') {
                            var lname = data[key].split(' ')[0];
                            var fname = data[key].split(' ')[1];
                            $('[name="firstname"]').html(fname);
                            $('[name="lastname"]').html(lname);
                        }
                        $('[name="' + key + '"]').html(data[key]);
                        if (key == 'repaymentDate') {
                            $('[name="' + key + '"]').html(new Date(data[key]).toLocaleDateString());
                        }
                        if (key == 'loanamount') {
                            $('[name="' + key + '"]').html(currformatter.format(data[key]));
                        }
                        if (key == 'interestamt') {
                            $('[name="' + key + '"]').html(currformatter.format(data[key]));
                        }
                        if (key == 'interestbalance') {
                            $('[name="' + key + '"]').html(currformatter.format(data[key]));
                        }
                        if (key == 'cappaymentcount') {
                            $('[name="' + key + '"]').html(currformatter.format(data[key]));
                        }
                        if (key == 'memberId') {
                            var member = getMemberById(data[key]);
                            var fullname = member.lastname + ' ' + member.firstname + ' ' + member.othernames;
                            $('[name="' + key + '"]').html(data[key]);
                            $('[name="fullname"]').html(fullname);
                        }

                        if (key == 'processState') {
                            if (data[key] == 'Processed') {
                                $('.processed').hide();
                            } else {
                                $('.processed').show();
                            }
                        }
                    }
                } catch (e) {
                    console.log(e);
                }
            }).fail(function (xhr, status, error) {
                $('#loadViewModal').pleaseWait('stop');
            });

        }

        $(function () {

            var appyear = localStorage.getItem('app_year');
            var startyear = new Date(appyear, 0, 1).addHours(2).toISOString().split('T')[0];
            var today = new Date().addHours(20).toISOString().split('T')[0];
            $('#startdate').val(startyear);
            $('#enddate').val(today);
            var ulonaUrl = appConfig.adminURL + 'api/loans/loanrepaymentsByDate?start=' + startyear + '&end=' + today;
            $('#LoanRequestTab').bootstrapTable({
                idField: 'id',
                url: ulonaUrl,
                columns: [{
                    field: 'memberid',
                    title: 'Member ID'
                }, {
                    field: 'memberid',
                        title: 'Fullname(s)',
                        formatter: nameFormatter
                    }, {
                    field: 'loanrefnumber',
                    title: 'Loan Id',
                    formatter: loanrefFormatter
                }, {
                    field: 'loanamount',
                    title: 'Amount',
                    formatter: moneyFormatter
                }, {
                    field: 'repayamount',
                    title: 'Amount Paid',
                    formatter: moneyFormatter
                }, {
                    field: 'transdate',
                    title: 'Transaction Date',
                    formatter: dateFormatter
                }/*, {
                    field: 'description',
                    title: 'Trnsaction Details',
                    cols: 2
                }*/, {
                    filed: 'grossPremium',
                    title: '',
                    formatter: viewFormatter
                }]
            });
            init_daterangepicker('reportrange', loadTable);


            function loadTable(startdate, enddate) {
                var glUrl = appConfig.adminURL + "api/loans/loanrepaymentsByDate?start=" + startdate + '&end=' + enddate;
                $('#LoanRequestTab').bootstrapTable('refresh', { url: glUrl, silent: false });
            }

            function nameFormatter(value,row,index){
                var member = getMemberById(value);
                var fullname = member.lastname + ' ' + member.firstname + ' ' + member.othernames;
                return '<span>' + fullname + '</span>';
            }
            function viewFormatter(value, row, index) {
                var id = row.id;
                var email = row.loanrefnumber;
                return '<div class="btn-group"><button data-toggle="dropdown" class="btn btn-danger dropdown-toggle" > Action <span class="caret" ></span ></button >' +
                    ' <ul class="dropdown-menu">' +
                    '<li><a id="demo01" class="btn" data-toggle="modal" data-target="#loadViewModal" onclick="loadView(\'' + id + '\')">VIEW</a></li>' +
                    //'<li><a id="demo02" class="btn admin" data-toggle="modal" data-target="#editUserModal" onclick="loadEditView(\'' + email + '\')">REVIEW</a></li>' +
                    ' </ul></div >'
            };
            $('#LoanRequestTab').on('post-body.bs.table', function () {
                $('[data-tooltip="true"]').tooltip({
                    container: 'body'
                });
            });
            $('#LoanRequestTab').on('load-success.bs.table', function () {
                hideAdmin();
                $('[data-tooltip="true"]').tooltip({
                    container: 'body'
                });
            });
            $(document).on('editable-save.bs.table', '#LoanRequestTab', function (e, field, row, old, $el) {
                console.log(row);
                $.post(appConfig.apiURL + 'api/loan/loanrepayments', row, function (e) {
                    console.log(e);
                    toastr.success('Department ' + product + ' edited successfully');
                }).fail(function (error) {
                    toastr.error('error editing ' + error.responseText + ' Department');

                });
            });

        });
    </script>


}