                                collPrevElements += '<div class="col-sm-6 card"><img onclick="previewImage(this)" class="myImg" style="width:150px;height:150px;" src="' + appConfig.userURL +
                                    'api/documents/fileuploads?filepath=' + data[e].fileurl + '" /></div>';
                            } else {
                                collPrevElements += '<div class="col-sm-6 card"><img onclick="previewImage(this)" class="myImg" style="width:150px;height:150px;" src="' +
                                    url + '/pdf.png" ' + 'alt=' + appConfig.userURL +
                                    'api/documents/fileuploads?filepath=' + data[e].fileurl + '" /></div>';
                            }

                            $collElement.innerHTML = collPrevElements + '</div>';
                        });
                    })

                    // });
                }
            }

        var modal = document.getElementById("myModal");
        function previewImage(id) {

            var img = document.getElementById("myImg");
            var modalImg = document.getElementById("img01");
            var captionText = document.getElementById("caption");
            if (id.src.indexOf('pdf.png') == -1) {
                modal.style.display = "block";
                modalImg.src = id.src;
                captionText.innerHTML = id.alt;
            } else {
                window.location.href = id.alt
            }

        } 
        
        var span = document.getElementsByClassName("close")[0];

        // When the user clicks on <span> (x), close the modal
        span.onclick = function () {
            modal.style.display = "none";
        }

        function certify() {
            var ischecked = $('#certifyApproval').is(':checked');
            if (ischecked) {
                $('#process').prop('disabled', false);
            } else {
                $('#process').prop('disabled', true);
            }
        }
        

        function showError(error, value, xhr) {
            $('#strWorkspace').pleaseWait('stop');
            toastr.error('unable to process request approval ');
            toastr.error(error.responseText);
            console.log(error);
        }
    </script>
    <script>
        var uploadedFiles = [];
        $('#upload-collateral-document').click(function (e) {

            document.getElementById("selectfile").click();
            document.getElementById("selectfile").onchange = function () {
                file = document.getElementById("selectfile").files[0];

                //check if uploaded file is valid
                let validExtensions = ["image/jpeg", "image/jpg", "image/png", "application/pdf"];
                let fileType = file.type;
                if (validExtensions.includes(fileType)) {
                    let fileReader = new FileReader();
                    let uploadedFilesPreview = $('#uploadedFilesPreview');
                    fileReader.onload = () => {
                        let fileURL = fileReader.result;
                        let imgTag = `<img src="${fileURL}" class="imgTag2" alt="">`;
                        let output = `
                                        ${imgTag}
                                    `;

                        //uploadedFiles.push('file', file);
                        uploadedFiles.push(file);

                        uploadedFilesPreview.append(`${output}`);
                        console.log(uploadedFiles);
                    }
                    fileReader.readAsDataURL(file);

                }
                else {
                    displayToast("error", "The image to be uploaded must be either .png, .jpg, .jpeg or .pdf format", "Invalid Image File");
                }
            }

        });

        $('#uploadDocument').click(function (e) {
            $('#tabs-2').pleaseWait();
            var formData = new FormData();
            console.log(uploadedFiles);
            var loanId = loanDetails.loanId;
            formData.append("loanId", loanId);
            formData.append("otherdetails", 'otherdetails');
            //$.each($("#selectfile")[0].files, function (i, file) {
            $.each(uploadedFiles, function (i, file) {
                //coll.push(file);
                formData.append('file', file);
            });
            let api_endpoint = "api/LoanRequest/UploadFile";

            $.ajax({
                url: appConfig.adminURL + api_endpoint,
                method: "POST",
                data: formData,
                contentType: false,
                cache: false,
                processData: false,
                success: function (data) {
                    $(this).attr('disabled', true);
                    $('#tabs-2').pleaseWait('stop');
                    toastr.success('collateral documents uploaded');
                },
                error: function (error) {
                    $('#tabs-2').pleaseWait('stop');
                    toastr.error('error uploading collateral documents');
                    //displayToast('error', 'Error uploading collateral documents', 'Collateral Document error');
                }
            });
        })
    </script>

