                } else {
                    $.each(coll, function (e) {
                        var ecoll = coll[e];
                        $.get(appConfig.adminURL + 'api/collaterals/userCollById?id=' + ecoll.userCollaterallId, function (data) {
                            collPrevElements += '<div class="col-sm-6 card"><img style="width:150px;height:150px;" src="' + appConfig.userURL +
                                'api/documents/fileuploads?filepath=' + data.url + '" /></div>';
                            //$docElement.innerHTML = docPrevElements;

                            if (e >= docs.length) {
