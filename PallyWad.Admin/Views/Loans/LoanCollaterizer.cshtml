</div>

<div id="loadReviewModal" class="modal fade" role="dialog">
    <div class="modal-dialog  modal-lg">

        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header bg-success">
                <h4 class="modal-title"> <span name="category"></span>Decline Request</h4>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-sm-12">
                        <div>
                            <span>Kindly Provide reasons for declining this loan request</span>
                        </div>
                        <div>
                            <span>Reason : </span><textarea name="reason" id="reason" class="form-control"></textarea>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer bg-success">
                <button type="button" class="btn btn-primary" onclick="declineRequest('Approve')">
                    Decline
                </button>
                <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
            </div>
        </div>

    </div>
</div>

@section Scripts {

    <script src="~/Scripts/config.js" type="text/javascript"></script>
    <script>
        var loanDetails = '';
        var loanId = qs['loanId'];
        var memberId = qs['memberId']
        loadView(loanId);

        function declineRequest() {
            $('#loadReviewModal').pleaseWait();
            var reason = $('#reason').val();
            loanDetails.processState = "Processed";
            loanDetails.processState = "Decline";
            loanDetails.reason = reason;
            loanDetails.approvedBy = localStorage.getItem('uemail');

            url = appConfig.adminURL + 'api/loanrequest/loanrequestdecline?id=' + loanDetails.id +
                '&reason=' + encodeURI(reason);

            $.ajax({
                type: 'PUT',
                url: url,
                data: JSON.stringify(loanDetails),
                contentType: "application/json",
            }).done(function (data) {
                $('#loadReviewModal').pleaseWait('stop');
                toastr.success('Loan Request  processed successfully');
                window.location.href = 'declined';
                //refreshTables();
            }).fail(function (request, message, error) {
                $('#loadReviewModal').pleaseWait('stop');
                toastr.error('error ' + error + 'for processing Loan Request ');
            });
        }

        function saveReview(type) {
            $('#loanCollateralView').pleaseWait();
            $('#process').prop('disabled', true);
            var url = '';
            if (type == 'Approve') {
                var approvalDate = $('#approvalDate').val();
                if (approvalDate == '') {
                    $('#loanCollateralView').pleaseWait('stop');
                    toastr.error('Please select a valid Approval Date ');
                    exit;
                } else {

                    loanDetails.approvalDate = approvalDate;
                    loanDetails.processState = "Collaterized";
                    loanDetails.status = "Collaterized";
                    loanDetails.tenantId = "rr";
                    loanDetails.approvedBy = localStorage.getItem('uemail');
                    url = appConfig.adminURL + 'api/loanrequest/ApproveLoanRequestCollateral?id=' + loanDetails.id;
                }
            } else {
                loanDetails.processState = "Processed";
                loanDetails.processState = "Decline";
                loanDetails.tenantId = "rr";
                loanDetails.approvedBy = localStorage.getItem('uemail');

                url = appConfig.adminURL + "api/admin/loanrequestdecline?id=" + loanDetails.id;
            }



            $.ajax({
                type: 'PUT',
                url: url,
                data: JSON.stringify(loanDetails),
                contentType: "application/json",
            }).done(function (data) {
                $('#loanCollateralView').pleaseWait('stop');
                toastr.success('Loan Request Collaterals  processed successfully');
                window.location.href = 'collaterized';
                //refreshTables();
            }).fail(function (request, message, error) {
                $('#loanCollateralView').pleaseWait('stop');
                toastr.error('error ' + request + 'for processing Loan Request Collaterals ');
                toastr.error(request.responseText);
                $('#process').prop('disabled', false);
                console.log(request);
            });

        }

        function etype(elementId) {
            var type = $('[id="' + elementId + '"').attr('type');
            return type;
        }

        function loadView(id) {
            $('#loadViewModal').pleaseWait();
            var url = appConfig.adminURL + 'api/loanrequest/loandetail?loanId=' + encodeURIComponent(id);
            $.get(url, function (data) {
                loanDetails = data;
                $('#loadViewModal').pleaseWait('stop');
                try {
                    for (var key in data) {
                        if (key == 'insuredname') {
                            var lname = data[key].split(' ')[0];
                            var fname = data[key].split(' ')[1];
                            $('[name="firstname"]').html(fname);
                            $('[name="lastname"]').html(lname);
                        }
                        $('[name="' + key + '"]').html(data[key]);
                        if (key == 'requestDate') {
                            $('[name="' + key + '"]').html(new Date(data[key]).toLocaleDateString());
                        }
                        if (key == 'approvalDate') {
                            if (data[key] == null) {
                                var d = new Date().toISOString().split('T')[0];
                                $('[id="' + key + '"]').val(d);
                            } else {
                                var d = new Date(data[key]).toISOString().split('T')[0];
                                $('[id="' + key + '"]').val(d);
                            }

                        }
                        if (key == 'memberId') {
                            var member = getMemberById(data[key]);
                            var fullname = member.lastname + ' ' + member.firstname + ' ' + member.othernames;
                            $('[name="' + key + '"]').html(data[key]);
                            $('[name="fullname"]').html(fullname);
                        }
                        if (key == 'amount') {
                            $('[name="' + key + '"]').html(currformatter.format(data[key]));
                        }
                        if (key == 'processingFee') {
                            $('[name="' + key + '"]').html(currformatter.format(data[key]));
                        }
                        if (key == 'monthtotalrepay') {
                            $('[name="' + key + '"]').html(currformatter.format(data[key]));
                        }
                        if (key == 'monthlyrepay') {
                            $('[name="' + key + '"]').html(currformatter.format(data[key]));
                        }
                        if (key == 'loanmonthlyinterest') {
                            $('[name="' + key + '"]').html((data[key]).toFixed(2));
                        } 

                        if (key == 'loanUserDocuments') {
                            var docList = data[key];
                            loadUserDocuments(data[key]);
                        }
                        if (key == 'loanUserCollaterals') {
                            loanUserCollaterals(data[key]);
                        }
                    }
                } catch (e) {
                    console.log(e);
                }
            }).fail(function (xhr, status, error) {
                $('#loadViewModal').pleaseWait('stop');
            });


            function loanUserCollaterals(coll) {
                var collPrevElements = '<div class="row">';
                var $collElement = document.getElementById('collPrev');
                var size = coll.length;
                if (size < 1) {
                    collPrevElements = '<h6>No User Collateral Uploaded</h6>'
                    $collElement.innerHTML = collPrevElements + '</div>';
                } else {
                    $.each(coll, function (e) {
                        var ecoll = coll[e];
                        $.get(appConfig.adminURL + 'api/collaterals/userCollById?id=' + ecoll.userCollaterallId, function (data) {
                            collPrevElements += '<div class="col-sm-6 card"><img style="width:150px;height:150px;" src="' + appConfig.userURL +
                                'api/documents/fileuploads?filepath=' + data.url + '" /></div>';
                            //$docElement.innerHTML = docPrevElements;

                            if (e >= docs.length) {
                                $collElement.innerHTML = collPrevElements + '</div>';
                            } else {
                                $collElement.innerHTML = collPrevElements + '</div>';
                            }

                        })

                    });
                }
            }

            function loadUserDocuments(docs) {
                var docPrevElements = '<div class="row">';
                var $docElement = document.getElementById('docPrev');
                var size = docs.length;
                if (size < 1) {
                    collPrevElements = '<h6>No User Document Uploaded</h6>'
                    $collElement.innerHTML = collPrevElements + '</div>';
                } else {
                    $.each(docs, function (e) {
                        var edocs = docs[e];
                        $.get(appConfig.adminURL + 'api/documents/userDocById?id=' + edocs.userDocumentlId, function (data) {
                            docPrevElements += '<div class="col-sm-6 card"><img style="width:150px;height:150px;" src="' + appConfig.userURL +
                                'api/documents/fileuploads?filepath=' + data.url + '" /></div>';
                            //$docElement.innerHTML = docPrevElements;

                            if (e >= docs.length) {
                                $docElement.innerHTML = docPrevElements + '</div>';
                            } else {
                                $docElement.innerHTML = docPrevElements + '</div>';
                            }

                        })

                    });
                }
            }



        }

        function showError(error, value, xhr) {
            $('#strWorkspace').pleaseWait('stop');
            toastr.error('unable to process request approval ');
            toastr.error(error.responseText);
            console.log(error);
        }
    </script>


}