@{
    ViewBag.Title = "Loan Trasactions";
}

<link href="~/css/index_style.css" rel="stylesheet">
<style>
    .hide {
        display: none;
    }

    .select2-selection {
        height: 34px !important;
        font-size: 13px;
        font-family: 'Open Sans', sans-serif;
        border-radius: 0 !important;
        border: solid 1px #c4c4c4 !important;
        padding-left: 4px;
    }

