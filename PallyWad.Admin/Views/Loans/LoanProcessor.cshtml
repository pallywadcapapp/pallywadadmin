                        docPrevElements += '<div class="col-sm-6 card"><img onclick="previewImage(this)" class="myImg" style="width:150px;height:150px;" src="' + appConfig.userURL +
                            'api/documents/fileuploads?filepath=' + data.url + '" /></div>';
                        //$docElement.innerHTML = docPrevElements;

