    loadView(loanId);


    function saveReview(type) {
        $('#loanProcessView').pleaseWait();
        $('#process').prop('disabled', true);
        var url = '';
        if(type=='Approve'){
            var processedDate = $('#processedDate').val();
            if(processedDate == ''){
                $('#loanProcessView').pleaseWait('stop');
                toastr.error('Please select a valid Processing Date ');
                exit;
            }else{
                
            loanDetails.processedDate = processedDate;
            loanDetails.processState = "Processed";
            loanDetails.status = "Processed";
            loanDetails.tenantId = "rr";
            loanDetails.approvedBy = localStorage.getItem('uemail');
                url = appConfig.adminURL + 'api/loanrequest/ProcessLoanRequest';
                    $.ajax({
                        type: 'PUT',
                        url: url,
                        data: JSON.stringify(loanDetails),
                        contentType: "application/json",
                    }).done(function (data) {
                        $('#loanProcessView').pleaseWait('stop');
                        toastr.success('Loan Request  processed successfully');
                        window.location.href = 'Processed';
                        //refreshTables();
                    }).fail(function (request, message, error) {
                        $('#loanProcessView').pleaseWait('stop');
                        toastr.error('error ' + request + 'for processing Loan Request ');
                        toastr.error(request.responseText);
                        $('#process').prop('disabled', false);
                        console.log(request);
                    });

            }
        }else{
            loanDetails.processState = "Processed";
            loanDetails.processState = "Decline";
            loanDetails.tenantId = "rr";
            loanDetails.approvedBy = localStorage.getItem('uemail');

                url = appConfig.apiURL + "api/admin/loanrequestdecline?id=" + loanDetails.id;
                $.ajax({
                    type: 'PUT',
                    url: url,
                    data: JSON.stringify(loanDetails),
                    contentType: "application/json",
                }).done(function (data) {
                    $('#loanProcessView').pleaseWait('stop');
                    toastr.success('Loan Request  processed successfully');
                    window.location.href = 'declined';
                    //refreshTables();
                }).fail(function (request, message, error) {
                    $('#loanProcessView').pleaseWait('stop');
                    toastr.error('error ' + request + 'for processing Loan Request ');
                    toastr.error(request.responseText);
                    $('#process').prop('disabled', false);
                    console.log(request);
                });

        }
        

        
         
    }

